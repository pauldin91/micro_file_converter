FROM golang:1.24 AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o main ./cmd/api/main.go

FROM alpine:3.21

WORKDIR /app

COPY --from=builder /app/main /app/main

COPY app.env /app/app.env

COPY docs /app/docs

CMD ["./main"]
